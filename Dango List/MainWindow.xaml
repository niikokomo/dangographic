<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PNG Resolution" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="SelectPakFileButton" Content="Open File" Click="SelectPakFileButton_Click"/>
            <Button x:Name="ExtractButton" Content="Extract File" Click="ExtractButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>